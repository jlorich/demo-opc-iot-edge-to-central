{
    "$schema-template": "1.0.0",
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "runtime": {
            "type": "docker",
            "settings": {
              "minDockerVersion": "v1.25",
              "loggingOptions": "",
              "registryCredentials": {}
            }
          },
          "systemModules": {
            "edgeAgent": {
              "type": "docker",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                "createOptions": {}
              }
            },
            "edgeHub": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                "createOptions": {
                  "HostConfig": {
                    "PortBindings": {
                      "5671/tcp": [
                        {
                          "HostPort": "5671"
                        }
                      ],
                      "8883/tcp": [
                        {
                          "HostPort": "8883"
                        }
                      ],
                      "443/tcp": [
                        {
                          "HostPort": "443"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "modules": {
            "opcPublisher": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "never",
              "settings": {
                "image": "mcr.microsoft.com/iotedge/opc-publisher:latest",
                "createOptions": {
                  "Cmd": [
                    "--pf=/data/publishedNodes.json",
                    "--aa"
                  ],
                  "HostConfig": {
                    "Binds": [
                      "/opc:/data"
                    ]
                  }
                }
              }
            },
            "opcSimulator": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "never",
              "settings": {
                "image": "nodered/node-red:latest",
                "createOptions": {
                  "ExposedPorts": {
                    "4840/tcp": {}
                  },
                  "HostConfig": {
                    "Binds": [
                        "/opc:/data"
                    ],
                    "PortBindings": {
                      "1880/tcp": [
                        {
                          "HostPort": "1880"
                        }
                      ],
                      "4840/tcp": [
                        {
                          "HostPort": "4840"
                        }
                      ]
                    }
                  }
                }
              }
            },
            "opcToDtdl": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "never",
              "settings": {
                "image": "azureiotgbb/opc-publisher-to-dtdl",
                "createOptions": {}
              }
            }
          }
        }
      },
      "$edgeHub": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "routes": {
            "opcPublisherToTranslator": "FROM /messages/modules/opcPublisher/* INTO BrokeredEndpoint(\"/modules/opcToDtdl/inputs/opc\")",
            "translatorToHub": "FROM /messages/modules/opcToDtdl/outputs/dtdl INTO $upstream"
          },
          "storeAndForwardConfiguration": {
            "timeToLiveSecs": 7200
          }
        }
      }
    }
  }